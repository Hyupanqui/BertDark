---
import { ViewTransitions } from "astro:transitions";
import Footer from "../components/footer/Footer.astro";
import Header from "../components/header/Header.astro";
import "../styles/fonts.css";
import "../styles/index.css";
import "../styles/tailwind.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta name="copyright" content="DiseÃ±ado por yupanqui.dev" />
    <meta name="author" content="Humberto Yupanqui Apaza" />
    <meta name="description" content="Humberto Yupanqui Apaza" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - Humberto Yupanqui Apaza</title>
    <ViewTransitions />
  </head>
  <body class="app">
    <header class="header">
      <Header />
    </header>
    <main>
      <div class="fixedSize flex flex-col gap-20 py-8">
        <slot />
      </div>
    </main>
    <footer class="footer">
      <Footer />
    </footer>
  </body>
</html>
