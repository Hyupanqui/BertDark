---
import { Image } from "astro:assets";
import Portfolio from "/public/portfolio.webp";
---

<section
  id="proyect"
  class="mx-auto max-w-6xl w-full flex flex-col justify-center gap-4 py-10 px-3 md:py-8"
>
  <aside class="mb-8">
    <h2 class="w-full text-3xl font-black text-sky-500 mb-4">Proyectos</h2>
    <p class="text-zinc-200 font-light">Revisa mi trabajo.</p>
  </aside>
  <div class="w-full grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
    <article
      class="w-full flex items-center justify-center gap-1 p-4 rounded-lg border-2 flex-col snap-start bg-clip-padding shadow-xl transition-[min-width,width,margin-left,opacity] duration-300 spacing-0 border-white/20 sm:rotate-[1.5deg] bg-[linear-gradient(40deg,var(--tw-gradient-stops))] from-pink-300/80 to-violet-500/40 shadow-violet-500/20"
    >
      <section
        class="w-auto h-90 rounded-md object-cover object-center [mask-image:linear-gradient(180deg,#fff_16.35%,rgb(255_255_255_/_0%)_91.66%)]"
      >
        <Image
          class="w-full h-90 rounded-md"
          loading="lazy"
          src={Portfolio}
          alt="Portfolio de Humberto Yupanqui Apaza"
        />
      </section>
      <section class="w-full flex gap-4 justify-center">
        <div class="text-[#F5F9FF]">
          <aside class="w-auto flex items-center justify-between">
            <div class="flex items-center gap-2">
              <span class="font-bold text-lg">Mi portafolio</span>
              <span
                class="font-light text-xs p-1 text-[#F5F9FF] rounded bg-[#113B73]"
              >
                Reciente
              </span>
            </div>
            <div class="flex gap-2 [&>a>svg]:w-5 items-center justify-center">
              <a
                class=""
                href="https://yupanqui.dev"
                target="_blank"
                rel="noreferrer"
              >
                <svg
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  fill="none"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M17 7l-10 10"></path>
                  <path d="M8 7l9 0l0 9"></path>
                </svg>
              </a>
            </div>
          </aside>
          <aside class="py-2">
            <p class="text-sm text-zinc-50 my-3">
              Primer sitio de portafolio construido con Astro,Tailwind CSS y
              React.
            </p>
            <section class="py-2 flex flex-wrap gap-2 mb-3">
              <!-- <Astrojs />
              <TailwindCSS />
              <TypeScript /> -->
            </section>
            <section class="w-full flex justify-between">
              <p class="font-light text-sm">2023</p>
              <div class="flex gap-2">
                <a href="https://github.com/yupanquidev/portfolio">
                  <svg
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    fill="none"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path
                      d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
                    ></path>
                  </svg>
                </a>
                <a href="https://yupanqui.dev">
                  <svg
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    fill="none"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M9 15l6 -6"></path>
                    <path d="M11 6l.463 -.536a5 5 0 0 1 7.071 7.072l-.534 .464"
                    ></path>
                    <path
                      d="M13 18l-.397 .534a5.068 5.068 0 0 1 -7.127 0a4.972 4.972 0 0 1 0 -7.071l.524 -.463"
                    ></path>
                  </svg>
                </a>
              </div>
            </section>
          </aside>
        </div>
      </section>
    </article>
  </div>
</section>
