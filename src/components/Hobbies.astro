---
import Star from "@/icons/Star.astro";
---

<section class="hobbies">
  <a
    class="h-min flex justify-center items-center relative bg-sky-500/20 p-1.5 rounded-full border border-sky-500/30 group hover:bg-yellow-600"
    href="https://github.com/yupanquidev/portfolio/stargazers"
    target="_blank"
  >
    <Star
      className="fill-yellow-500 stroke-yellow-500 group-hover:fill-white group-hover:stroke-white group"
      whidth="15"
      height="15"
    />
    <tooltip
      class="absolute z-50 pointer-events-none select-none shadow-sm py-1.5 px-3 rounded-md font-light text-xs top-9 opacity-0 transition-opacity duration-300 ease-in group-hover:opacity-100 bg-sky-500/20 border border-sky-500/30 text-nowrap before:absolute before:bg-sky-500/20 before:border before:border-sky-500/30 before:-z-50 before:w-3 before:h-3 before:-top-1 before:left-[45%] before:rotate-45"
      role="tooltip"
    >
      Una estrella en GitHub
    </tooltip>
  </a>
  <span class="soccer">Fútbol</span>
  <span class="run">Correr</span>
  <span class="walk">Caminar</span>
  <span class="photography">Fotografía</span>
</section>

<style>
  .hobbies {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 6px;
  }

  .soccer,
  .run,
  .walk,
  .photography {
    --text-opacity: 0.3;
    --bg-opacity: 0.2;
    display: inline-flex;
    align-items: center;
    height: min-content;
    background-color: var(--bg-color);
    color: var(--text-color);
    border-radius: 6px;
    border: 2px solid var(--border-color);
    padding: 2px 8px;
    font-weight: 300;
    font-size: 12px;
    line-height: 20px;
    cursor: crosshair;
    user-select: none;
    white-space: nowrap;
    transition: all 0.2s ease-in-out;
  }

  .soccer {
    --border-color: rgb(249 115 22 / var(--text-opacity));
    --bg-color: rgb(234 179 8 / var(--bg-opacity));
    --text-color: rgb(254 249 195);
  }

  .run {
    --border-color: rgb(249 115 22 / var(--text-opacity));
    --bg-color: rgb(249 115 22 / var(--bg-opacity));
    --text-color: rgb(255 237 213);
  }

  .walk {
    --border-color: rgb(34 197 94 / var(--text-opacity));
    --bg-color: rgb(34 197 94 / var(--bg-opacity));
    --text-color: rgb(220 252 231);
  }

  .photography {
    --border-color: rgb(59 130 246 / var(--text-opacity));
    --bg-color: rgb(59 130 246 / var(--bg-opacity));
    --text-color: rgb(219 234 254);
  }

  .soccer:hover,
  .run:hover,
  .walk:hover,
  .photography:hover {
    --bg-opacity: 0.4;
  }
</style>
