---
import ArrowUpRight from "@icons/ArrowUpRight.astro";

interface Props {
	href?: string;
	class?: string;
	title?: string;
}

const { href, title } = Astro.props;
---

{
	href ? (
		<a
			class:list={[
				"flex border border-mauve-300/20 rounded-xl bg-y text-mauve-50 font-light p-6 relative transition-all duration-300 hover:border-mauve-400/80 col-span-1 group",
				Astro.props.class,
			]}
			href={href}
		>
			{title ? <h3 class="text-xs text-mauve-300/60">{title}</h3> : null}
			<slot />
			<ArrowUpRight
				size="22"
				class="stroke-2 stroke-mauve-50 right-6 top-6 transition-all duration-200 group-hover:scale-105 absolute  group-hover:right-5 group-hover:top-5 group-hover:stroke-mauve-400/80"
			/>
		</a>
	) : (
		<article
			class:list={[
				"border border-mauve-300/20 rounded-xl bg-y text-mauve-50 font-light p-6 col-span-1 group",
				Astro.props.class,
			]}
		>
			{title ? <h3 class="text-xs text-mauve-300/60">{title}</h3> : null}
			<slot />
		</article>
	)
}
