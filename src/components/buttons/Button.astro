---
interface Props {
  buttonName: string;
  href: string;
  target?: string;
  rel?: string;
  className?: string;
}

const { buttonName, href, target, rel, className } = Astro.props;
---

<a href={href} target={target} rel={rel} class=`${className}`>
  {buttonName}
  <slot name="icon" />
</a>

<style>
  a {
    width: max-content;
    height: auto;
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 8px 16px;
    font-weight: 400;
    font-size: 14px;
    line-height: 20px;
    border-radius: 8px;
    transition: all 0.3s ease-in-out;
    border: 2px solid rgb(14, 165, 233);
    width: max-content;
    position: relative;
    padding: 10px 16px;
    font-weight: 400;
    font-size: 14px;
    line-height: 20px;
    border: 2px solid rgb(14 165 233);
    border-radius: 8px;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 150ms;
  }

  .download {
    background-color: rgb(7, 89, 133);
    color: rgb(250, 250, 250);
  }

  .download:hover,
  .contact-home:hover {
    background-color: rgb(2, 132, 199);
  }

  .contact-home {
    height: max-content;
  }

  .contact {
    position: relative;
    transition-property: color, background-color, border-color,
      text-decoration-color, fill, stroke;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 150ms;
  }

  .contact-header {
    background: #fff;
    color: #000;
  }

  .contact-header:hover {
    background: #a1a1aa;
  }

  .contact::before {
    content: "";
    position: absolute;
    top: 4px;
    bottom: -2px;
    left: -2px;
    right: -2px;
    z-index: -1;
    --blur: blur(12px);
    --saturate: saturate(1.5);
    filter: var(--blur) var(--tw-brightness) var(--tw-contrast)
      var(--tw-grayscale) var(--tw-hue-rotate) var(--tw-invert) var(--saturate)
      var(--tw-sepia) var(--tw-drop-shadow);
    background-clip: padding-box;
    opacity: 0.6;
    transition: all 0.2s ease-in-out;
    background-image: linear-gradient(
      120deg,
      #ec6192,
      #ec4c34,
      #ffbd2b,
      #ebde56,
      #57c754,
      #53a1eb
    );
  }

  @media (max-width: 768px) {
    .contact-header {
      display: none;
    }

    .contact-header-mobile {
      display: block;
    }
  }
</style>
