---
import Footer from "@/components/sections/Footer.astro"
import Header from "@/components/sections/Header.astro"

interface Props {
  title: string;
}

const { title } = Astro.props;
const { currentLocale } = Astro;
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta name="copyright" content="DiseÃ±ado por yupanqui.dev" />
    <meta name="author" content="Humberto Yupanqui Apaza" />
    <meta name="description" content="Humberto Yupanqui Apaza" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - Humberto Yupanqui Apaza</title>
  </head>
  <body>
    <Header />
    <main class="space-y-10">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "N27";
    src:
      url("/fonts/n27/n27-light.woff") format("woff"),
      url("/fonts/n27/n27-light.woff2") format("woff2"),
      url("/fonts/n27/n27-light.ttf") format("truetype");
    font-weight: 300;
    font-display: swap;
    font-style: normal;
  }

  @font-face {
    font-family: "N27";
    src:
      url("/fonts/n27/n27-regular.woff") format("woff"),
      url("/fonts/n27/n27-regular.woff2") format("woff2"),
      url("/fonts/n27/n27-regular.ttf") format("truetype");
    font-weight: 400;
    font-display: swap;
    font-style: normal;
  }

  @font-face {
    font-family: "N27";
    src:
      url("/fonts/n27/n27-medium.woff") format("woff"),
      url("/fonts/n27/n27-medium.woff2") format("woff2"),
      url("/fonts/n27/n27-medium.ttf") format("truetype");
    font-weight: 500;
    font-display: swap;
    font-style: normal;
  }

  @font-face {
    font-family: "N27";
    src:
      url("/fonts/n27/n27-bold.woff") format("woff"),
      url("/fonts/n27/n27-bold.woff2") format("woff2"),
      url("/fonts/n27/n27-bold.ttf") format("truetype");
    font-weight: 700;
    font-display: swap;
    font-style: normal;
  }

  @font-face {
    font-family: "N27";
    src:
      url("/fonts/n27/n27-lightitalic.woff") format("woff"),
      url("/fonts/n27/n27-lightitalic.woff2") format("woff2"),
      url("/fonts/n27/n27-lightitalic.ttf") format("truetype");
    font-weight: 300;
    font-display: swap;
    font-style: italic;
  }

  @font-face {
    font-family: "N27";
    src:
      url("/fonts/n27/n27-regularitalic.woff") format("woff"),
      url("/fonts/n27/n27-regularitalic.woff2") format("woff2"),
      url("/fonts/n27/n27-regularitalic.ttf") format("truetype");
    font-weight: 400;
    font-display: swap;
    font-style: italic;
  }

  @font-face {
    font-family: "N27";
    src:
      url("/fonts/n27/n27-mediumitalic.woff") format("woff"),
      url("/fonts/n27/n27-mediumitalic.woff2") format("woff2"),
      url("/fonts/n27/n27-mediumitalic.ttf") format("truetype");
    font-weight: 500;
    font-display: swap;
    font-style: italic;
  }

  @font-face {
    font-family: "N27";
    src:
      url("/fonts/n27/n27-bolditalic.woff") format("woff"),
      url("/fonts/n27/n27-bolditalic.woff2") format("woff2"),
      url("/fonts/n27/n27-bolditalic.ttf") format("truetype");
    font-weight: 700;
    font-display: swap;
    font-style: italic;
  }

  @font-face {
    font-family: "Geist";
    src:
      url("/fonts/geist/VF.ttf") format("truetype"),
      url("/fonts/geist/VF.woff2") format("woff2-variations"),
      url("/fonts/geist/VF.woff") format("woff supports variations");
    font-weight: 100 900;
    font-stretch: 50% 200%;
    font-display: swap;
    font-style: normal;
  }

  @font-face {
    font-family: "Monaspace";
    src:
      url("/fonts/monaspace/NeonVF.ttf") format("truetype"),
      url("/fonts/monaspace/NeonVF.woff2") format("woff2-variations"),
      url("/fonts/monaspace/NeonVF.woff") format("woff supports variations");
    font-weight: 100 900;
    font-stretch: 50% 200%;
    font-display: swap;
    font-style: normal;
  }

  html,
  body {
    font-family: "N27", sans-serif;
    color-scheme: dark light;
  }

  body::-webkit-scrollbar,
  textarea::-webkit-scrollbar {
    width: 0.5rem;
  }

  body::-webkit-scrollbar-thumb,
  textarea::-webkit-scrollbar-thumb {
    background-color: #0284c7;
    border-radius: 1rem;
    transition: all 0.5s;
  }

  body::-webkit-scrollbar-thumb:hover,
  textarea::-webkit-scrollbar-thumb:hover {
    background-color: #0369a1;
  }

  html {
    background-color: rgb(9, 9, 11);
  }

  img,
  video,
  svg {
    display: block;
    height: auto;
    max-width: 100%;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    text-wrap: balance;
    font-family: "Geist";
  }

  p {
    text-wrap: pretty;
  }
</style>

<style>
  body {
    display: flex;
    flex-direction: column;
    background-color: rgb(9 9 11);
  }

  div {
    width: 100%;
    margin: 0 auto;
    max-width: 48rem;
    padding: 0 0.75rem;
    display: flex;
    flex-direction: column;
    gap: 5rem;
  }

  footer {
    width: 100%;
    padding: 4rem 0;
    color: rgb(212 212 216);
    font-size: 1rem;
    font-weight: 300;
  }
</style>
