---
interface Props {
  buttonName: string;
  href: string;
  target?: string;
  rel?: string;
  className?: string;
}

const { buttonName, href, target, rel, className } = Astro.props;
---

<a
  href={href}
  target={target}
  rel={rel}
  class=`group transition-all duration-300 hover:shadow-[0_0px_5px_5px_rgb(14,165,233,0.1)] ${className}`
>
  <slot name="icon" />
  {buttonName}
</a>

<style>
  a {
    width: max-content;
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 8px 16px;
    font-weight: 400;
    font-size: 14px;
    line-height: 20px;
    background-color: rgb(7, 89, 133);
    color: rgb(250, 250, 250);
    border: 2px solid rgb(14, 165, 233);
    border-radius: 8px;
  }

  a:hover {
    background-color: rgb(2, 132, 199);
  }
</style>
