---
import ThreadsCard from "./ThreadsCard.astro";
import Xcard from "./Xcard.astro";
---

<article
  class="max-w-min w-full flex flex-wrap gap-4 p-5 rounded-2xl border-purple-700/20 bg-purple-300/70 dark:bg-purple-950/10 backdrop-blur-3xl shadow-[0px_0px_20px_1px] shadow-purple-500/20"
>
  <Xcard />
  <ThreadsCard />
</article>

<style>
  article {
    animation: animate-float 5s infinite;
  }

  @keyframes animate-float {
    0%,
    100% {
      transform: translateY(0px) rotateX(2deg) rotateY(-5deg);
    }

    50% {
      transform: translateY(5px) rotateX(2deg) rotateY(-5deg);
    }
  }
</style>
