<style>
  section {
    width: 100%;
    margin: 0 auto;
    max-width: 1152px;
    padding: 0 12px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
  }

  span {
    width: 100%;
    height: 1px;
    background-color: rgb(39 39 42);
  }

  div {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  ul {
    display: flex;
    gap: 4px;
  }

  @media (min-width: 768px) {
    div {
      flex-direction: row;
      justify-content: space-between;
    }

    section {
      gap: 32px;
      justify-content: space-between;
    }
  }
</style>
