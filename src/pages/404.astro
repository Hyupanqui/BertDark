---
import NotFoundCard from "../components/NotFoundCard.astro";
import Layout from "../layouts/Layout.astro";
import IconArrowLeft from "@/icons/IconArrowLeft.astro";
---

<Layout title="Error 404, no lo he encontrado">
  <div>
    <NotFoundCard />
    <a class="back-home-button" href="/">
      Volver a la p√°gina de inicio
      <IconArrowLeft />
    </a>
  </div>
  <div class="flex flex-col justify-center items-center leading-none h-full">
    <h1
      class="text-[10rem] font-black bg-gradient-to-r to-sky-500 from-emerald-500 bg-clip-text text-transparent"
    >
      404
    </h1>
    <span class="font-medium opacity-80 text-lg text-sky-500">Not Found</span>
  </div>
</Layout>

<style>
  div {
    display: flex;
    gap: 1rem;
  }

  .back-home-button {
    width: max-content;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    border: 2px solid rgb(13 163 232 / 0.4);
    border-radius: 10px;
    padding: 20px;
    background-image: radial-gradient(
      circle farthest-side at 50% 100%,
      rgb(3 105 161 / 0.2),
      rgb(10 10 10)
    );
  }
</style>
